<Page
    x:Class="Healthify.Pages.PatientInfo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Healthify.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
                       
        <TextBox x:ConnectionId='1' x:Name="ts1" PlaceholderText="Advice 1"/>
        <TextBox x:ConnectionId='2' x:Name="ts2" PlaceholderText="Advice 2"
                 Grid.Row="1"/>
        <TextBox x:ConnectionId='3' x:Name="adv1" PlaceholderText="Symptom 1"
                 Grid.Row="2"/>
        <TextBox x:ConnectionId='4' x:Name="adv2" PlaceholderText="Symptom 2"
                 Grid.Row="3"/>
        <TextBox x:ConnectionId='5' x:Name="disName" PlaceholderText="Disease"
                 Grid.Row="4"/>

        <!--        Maybe change bleow thing to radio button? -->
        <TextBox x:ConnectionId='6' x:Name="status" PlaceholderText="Patient Status"
                 Grid.Row="5"/>

        <Button x:ConnectionId='7' x:Name="sendDatatoDB" Content="Submit"
                                           Grid.Row="6"
                HorizontalAlignment="Center"/>

    </Grid>
</Page>

